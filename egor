from flask import Flask, request
import telebot

TOKEN = "7885370608:AAFWlzobbXfjQJZMphKenwSyGOCNLxCLVcw"  # Замените на токен вашего бота
bot = telebot.TeleBot(TOKEN)
app = Flask(__name__)

GAME_LINK = "https://github.com/egorprogramistpizdec/bot.git"  # Замените на вашу ссылку

@app.route(f"/{TOKEN}", methods=["POST"])
def receive_update():
    bot.process_new_updates([telebot.types.Update.de_json(request.stream.read().decode("utf-8"))])
    return "", 200

@bot.message_handler(commands=["start", "help"])
def send_welcome(message):
    bot.reply_to(message, f"Привет! Нажми на ссылку, чтобы сыграть в игру 'Память' с фруктами: {GAME_LINK}")

@bot.message_handler(func=lambda message: True)
def send_game_link(message):
    bot.reply_to(message, f"Нажми на ссылку, чтобы сыграть: {GAME_LINK}")

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
